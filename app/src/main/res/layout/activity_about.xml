<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigation"
        android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Road Damage Reporter"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <!-- App Description -->
        <TextView
            android:id="@+id/aboutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This app allows users to report road damage in real-time, including location, image, and description."
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:padding="8dp"/>

        <!-- Meet the Team -->
        <TextView
            android:id="@+id/meetText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meet Our Team Members"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <!-- Team Members Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:paddingBottom="32dp">

            <!-- Member 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/member1Image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/aqmar"
                    android:contentDescription="Member 1"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shafiqa Aqmar Binti Kamaruddin"
                    android:textSize="14sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024204964"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:gravity="center"/>

            </LinearLayout>

            <!-- Member 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/member2Image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/faizatul"
                    android:contentDescription="Member 2"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Noor Faizatul Amira Binti Faizmanshah"
                    android:textSize="14sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024218938"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:gravity="center"/>

            </LinearLayout>

            <!-- Member 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/member3Image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ain"
                    android:contentDescription="Member 3"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nur Ain Binti Mohd Khalib"
                    android:textSize="14sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024286996"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:gravity="center"/>

            </LinearLayout>

            <!-- Member 4 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/member4Image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/fannin"
                    android:contentDescription="Member 4"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Muhammad Fannin Nuaim Bin Badrul Hisham"
                    android:textSize="14sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024243972"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:gravity="center"/>

            </LinearLayout>

        </GridLayout>

        <!-- Clickable GitHub Link Text -->
        <TextView
            android:id="@+id/githubLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="https://github.com/2024204964/RoadDamageReporter"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1565C0"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/nav_yellow"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/bottom_nav_selector"
        app:itemTextColor="@color/bottom_nav_selector" />
</RelativeLayout>

